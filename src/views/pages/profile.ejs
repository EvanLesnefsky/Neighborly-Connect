    <div class = "container">
        <h1>My Profile: <%= username %></h1>
        <div class="col"><%- include ('../partials/message') %></div>
        <table style="font-size: 18px; margin: auto;">
            <tr>
                <td style="padding-right: 10px;">Username:</td>
                <td><%= username %></td>
            </tr>
            <tr>
                <td style="padding-right: 10px;">Email:</td>
